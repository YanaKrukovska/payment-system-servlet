<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="" name="payment-system" packages="">
    <Appenders>
        <File name="log" fileName="all-logs.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="log"/>
        </Root>
    </Loggers>
</Configuration>